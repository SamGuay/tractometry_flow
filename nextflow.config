process {
    tag={ "${sid} - ${bname}" }
    publishDir={"./results_tractometry/$sid/$task.process"}
    scratch=true
    errorStrategy='retry'
    maxRetries=1
    stageInMode='copy'
    stageOutMode='rsync'
    afterScript='sleep 1'
}

params {
    //**Output directory**//
    output_dir=false

    nb_points=20
    min_lesion_vol=7
    use_provided_centroids=true
    skip_projection_endpoints_metrics=true
    skip_tract_profiles=false
    skip_plotting=true
    bundle_suffix_to_remove='_cleaned'

    colors=["AC":"0x02d983",
            "AF_L":"0xcc0000",
            "AF_R":"0xffdf0f",
